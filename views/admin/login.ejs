<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Mego | Login</title>

    <link rel="icon" sizes="600x600" href="/img/logo.png">

    <link rel="stylesheet" type="text/css" href="/css/googlefonts.css">
    <link rel="stylesheet" href="/vendor/boostrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/uniform/css/uniform.default.min.css">
    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/plugins.css">
    <link rel="stylesheet" href="/css/admin/login.css">
</head>
<body class="login">
    <!-- begine log -->
    <div class="logo">
        <h3><a href="/">Mego</a></h3>
    </div>
    <!-- end log -->

    <!-- begine login -->
    <div class="content">
        <form action="/admin/login" method="post" class="login_form">
            <h3 class="form-title">Sign In</h3>

            <% if(locals.errors) { %>
            <div class="alert alert-danger">
            <% } else { %> 
                <div class="alert alert-danger display-hide">
            <% } %>
                <button class="close" data-close="alert"></button>
                <span><%= locals.errors %></span>
            </div>

            <div class="form-group">
                <input type="text" class="form-control form-control-solid" autocomplete="off" placeholder="Username" name="account">
            </div>

            <div class="form-group">
                <input type="password" class="form-control form-control-solid" autocomplete="off" placeholder="Password" name="password">
            </div>

            <div class="form-actions">
                <button class="btn btn-success uppercase">Login</button>
                <label class="rememberme check">
                    <div class="checker"><span><input type="checkbox" name="remember" value="1"></span></div>Remember 
                </label>
            </div>
        </form>
    </div>

    <div class="copyright">
        2017 @ Hitachi CDC
    </div>
    <!-- end login -->
</body>
</html>