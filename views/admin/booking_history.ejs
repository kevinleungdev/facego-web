<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Mego | Administration</title>
    
    <link rel="icon" sizes="600x600" href="/img/logo.png">
    
    <link rel="stylesheet" type="text/css" href="/css/googlefonts.css">
    <link rel="stylesheet" href="/vendor/boostrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/uniform/css/uniform.default.min.css">
    <link rel="stylesheet" href="/vendor/font-awsome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/vendor/simple-line-icons/simple-line-icons.min.css">

    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/plugins.css">
    <link rel="stylesheet" href="/css/admin/login.css">
    <link rel="stylesheet" href="/theme/css/layout.css">
    <link rel="stylesheet" href="/theme/css/darkblue.css">

    <style type="text/css">
        table tbody {
            font-size: 13px !important;
        }
    </style>
</head>
<body class="page-header-fixed page-quick-sidebar-over-content page-sidebar-closed-hide-logo">
    <!-- begin header -->
    <% include ../partials/header %>
    <!-- end header -->

    <div class="clearfix"></div>

    <!-- begin container -->
    <div class="page-container">
        <!-- begine sidebar -->
        <% var activeItem= 'booking_history'; %>
        <% include ../partials/sidebar %>
        <!-- end sidebar -->

        <!-- begin content -->
        <div class="page-content-wrapper">
            <div class="page-content" style="min-height:900px;">
                <!-- begin page header -->
                <div class="page-bar">
                    <ul class="page-breadcrumb">
                        <li>
                            <i class="icon-calendar"></i>
                            <a href="javascript:;">Booking History</a>
                        </li>
                    </ul>
                </div>
                <!-- end page header --> 

                <!-- begin page content -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- begin toolbar -->
                        <div class="table-toolbar">
                            <div class="row">
                                <!-- begin left of button group -->
                                <div class="col-md-6">
                                    <div class="btn-group">
                                        <a id="booking" href="/admin/booking/add" class="btn green">
                                            <i class="icon-home"></i> Booking Room
                                        </a>
                                    </div>
                                </div>
                                <!-- end left of button group -->
                            </div>
                        </div>
                        <!-- end toolbar -->

                        <!-- begine table content -->
                        <div id="table_wrapper">
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
                                    <!-- begin grid header -->
                                    <thead>
                                        <tr role="row">
                                            <th tabindex="0" rowspan="1" colspan="1">Date</th>
                                            <th tabindex="1" rowspan="1" colspan="1">From</th>
                                            <th tabindex="2" rowspan="1" colspan="1">To</th>
                                            <th tabindex="3" rowspan="1" colspan="1">Booker</th>
                                            <th tabindex="4" rowspan="1" colspan="1">Comment</th>
                                            <th tabindex="4" rowspan="1" colspan="1">Room</th>
                                            <th tabindex="5" rowspan="1" colspan="1">Actions</th>
                                        </tr>
                                    </thead>
                                    <!-- end grid header -->    
                                    <!-- begin grid body -->
                                    <tbody>
                                        <% if (records.length === 0) { %>
                                        <tr role="row">
                                            <td rowspan="1" colspan="7" align="center">No matching records found</td>
                                        </tr>
                                        <% } else { %>
                                            <% records.forEach(function(record) { %>
                                            <tr role="row">
                                                <td><%= record.dayOfWeek %></td>
                                                <td><%= record.from %></td>
                                                <td><%= record.to %></td>
                                                <td><%= record.booker %></td>
                                                <td><%= record.comment %></td>
                                                <td><%= record.room.name %></td>
                                                <td>
                                                    <a href="/admin/booking/update/<%= record.id %>">
                                                       <i class="fa fa-edit"></i>  Edit
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        <% } %>
                                    </tbody>
                                    <!-- end grid body -->
                                </table>
                            </div>
                        </div>
                        <!-- end table content -->
                    </div>
                </div>
                <!-- end page content -->
            </div>
        </div>
        <!-- end content -->

        <!-- begin footer -->
        <% include ../partials/footer %>
        <!-- end footer -->
    </div>
    <!-- end container -->

    <!-- begin javascript -->
    <!-- begin core plugins -->
    <script src="/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="/vendor/boostrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/vendor/boostrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/theme/scripts/metronic.js" type="text/javascript"></script>
    <script src="/theme/scripts/layout.js" type="text/javascript"></script>
    <!-- end core plugins -->
    <script type="text/javascript">
        jQuery(document).ready(function() {
            Metronic.init();
            Layout.init();
        });
    </script>
    <!-- end javascript -->
</body>
</html>