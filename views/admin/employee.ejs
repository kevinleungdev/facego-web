<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Mego | Administration</title>
    
    <link rel="icon" sizes="600x600" href="/img/logo.png">
    
    <link rel="stylesheet" type="text/css" href="/css/googlefonts.css">
    <link rel="stylesheet" href="/vendor/font-awsome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/vendor/simple-line-icons/simple-line-icons.min.css">
    <link rel="stylesheet" href="/vendor/boostrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/uniform/css/uniform.default.min.css">
    <link rel="stylesheet" href="/vendor/datatables/plugins/bootstrap/dataTables.bootstrap.css">

    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/plugins.css">
    <link rel="stylesheet" href="/theme/css/layout.css">
    <link rel="stylesheet" href="/theme/css/darkblue.css">

    <style type="text/css">
        table tbody {
            font-size: 13px !important;
        }
    </style>
</head>
<body class="page-header-fixed page-quick-sidebar-over-content page-sidebar-closed-hide-logo">
    <!-- begin header -->
    <% include ../partials/header %>
    <!-- end header -->

    <div class="clearfix"></div>

    <!-- begin container -->
    <div class="page-container">
        <!-- begine sidebar -->
        <% var activeItem= 'employees'; %>
        <% include ../partials/sidebar %>
        <!-- end sidebar -->

        <!-- begin content -->
        <div class="page-content-wrapper">
            <div class="page-content" style="min-height:900px;">
                <!-- begin page header -->
                <div class="page-bar">
                    <ul class="page-breadcrumb">
                        <li>
                            <i class="icon-user"></i>
                            <a href="javascript:;">Employees</a>
                        </li>
                    </ul>
                </div>
                <!-- end page header -->

                <!-- begin page content -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- begin toolbar -->
                        <div class="table-toolbar">
                            <div class="row">
                                <!-- begin left of button group -->
                                <div class="col-md-6">
                                    <div class="btn-group">
                                        <a id="new_employee" href="/admin/employee/add" class="btn green">
                                            <i class="icon-user-follow"></i> Add New
                                        </a>
                                    </div>
                                </div>
                                <!-- end left of button group -->

                                <!-- begine right of button group -->
                                <div class="col-md-6" style="display: none;">
                                    <div class="btn-group pull-right">
                                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                                            Actions <i class="fa fa-angle-down"></i>
                                        </button>
                                        
                                        <ul class="dropdown-menu pull-right">
											<li>
												<a href="javascript:;">Delete Users </a>
											</li>
											<li>
												<a href="javascript:;">Change User Avatar </a>
											</li>
										</ul>
                                    </div>
                                </div>
                                <!-- end right of button group -->
                            </div>
                        </div>
                        <!-- end toolbar -->

                        <!-- begine table content -->
                        <div id="table_wrapper">
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
                                    <!-- begin grid header -->
                                    <thead>
                                        <tr role="row">
                                            <th class="table-checkbox sorting_disabled" rowspan="1" colspan="1" style="width: 24px;">
                                                <div class="checker">
                                                    <span><input type="checkbox" class="group-checkable" data-set="#table.checkboxes"></span>
                                                </div>
                                            </th>
                                            <th tabindex="0" rowspan="1" colspan="1">Full Name</th>
                                            <th tabindex="1" rowspan="1" colspan="1">Job Title</th>
                                            <th tabindex="2" rowspan="1" colspan="1">Email</th>
                                            <th tabindex="3" rowspan="1" colspan="1">Department</th>
                                            <th tabindex="4" rowspan="1" colspan="1">Gender</th>
                                            <th tabindex="5" rowspan="1" colspan="1">Edit</th>
                                        </tr>
                                    </thead>
                                    <!-- end grid header -->

                                    <!-- begin grid body -->
                                    <tbody>
                                        <% if (employees.length === 0) { %>
                                        <tr role="row">
                                            <td rowspan="1" colspan="7" align="center">No matching records found</td>
                                        </tr>
                                        <% } else { %>
                                            <% employees.forEach(function(employee) { %>
                                            <tr role="row">
                                                <td>
                                                    <div class="checker">
                                                        <span><input type="checkbox" class="checkboxes" value="1"></span>
                                                    </div>
                                                </td>
                                                <td><%= employee.fullname %></td>
                                                <td><%= employee.title %></td>
                                                <td><a href="javascript:;"><%= employee.email %></a></td>
                                                <td><%= employee.group %></td>
                                                <td><%= employee.gender %></td>
                                                <td>
                                                    <a href="/admin/employee/update/<%= employee.id %>">
                                                        <i class="fa fa-edit"></i>  Edit
                                                     </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        <% } %>
                                    </tbody>
                                    <!-- end grid body -->
                                </table>
                            </div>
                        </div>
                        <!-- end table content -->
                    </div>
                </div>
                <!-- end page content -->
            </div>
        </div>
        <!-- end content -->

        <!-- begin footer -->
        <% include ../partials/footer %>
        <!-- end footer -->
    </div>
    <!-- end container -->

    <!-- begin javascript -->
    <!-- begin core plugins -->
    <script src="/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="/vendor/boostrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/vendor/boostrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/theme/scripts/metronic.js" type="text/javascript"></script>
    <script src="/theme/scripts/layout.js" type="text/javascript"></script>
    <!-- end core plugins -->
    <script type="text/javascript">
        jQuery(document).ready(function() {
            Metronic.init();
            Layout.init();
        });
    </script>
    <script src="/scripts/admin/employee.js" type="text/javascript"></script>
    <!-- end javascript -->
</body>
</html>